<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ehealthinformatics">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.AUTHENTICATE_ACCOUNTS" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.USE_CREDENTIALS" />
    <uses-permission android:name="android.permission.MANAGE_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_SYNC_SETTINGS" />
    <uses-permission android:name="android.permission.READ_SYNC_STATS" />
    <uses-permission android:name="android.permission.WRITE_SYNC_SETTINGS" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MANAGE_DOCUMENTS" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <uses-permission android:name="android.permission.SEND_SMS"/>
    <uses-permission android:name="android.permission.READ_SMS" />
    <uses-permission android:name="android.permission.WRITE_SMS"/>
    <uses-permission android:name="android.permission.RECEIVE_SMS"/>
    <uses-permission android:name="android.permission.RECEIVE_MMS"/>
    <uses-permission android:name="android.provider.Telephony.SMS_RECEIVED" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_SETTINGS" />
    <uses-feature
        android:name="android.hardware.camera.any"
        android:required="true" />
    <uses-feature
        android:name="android.hardware.camera.autofocus"
        android:required="false" />

    <application
        android:name="com.ehealthinformatics.App"
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@drawable/rx"
        android:largeHeap="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.ehealthinformatics.app.activity.OdooLogin"
            android:label="${applicationName}"
            android:screenOrientation="portrait">
        </activity>
        <activity android:name="com.ehealthinformatics.app.activity.ManageAccounts" />
        <activity
            android:name="com.ehealthinformatics.app.activity.OdooActivity"
            android:label="${applicationName}" />
        <activity android:name="odoo.controls.SearchableItemActivity" />
        <activity android:name="com.ehealthinformatics.app.activity.product.ProductEdit"
            android:windowSoftInputMode="adjustResize"
            />
        <activity android:name="com.ehealthinformatics.app.fragment.PosOrderDetails" />
        <activity android:name="com.ehealthinformatics.app.activity.pos.PosOrderEdit" />
        <activity android:name="com.ehealthinformatics.app.activity.shopping.PosOrderCart" />
        <activity android:name="com.ehealthinformatics.app.activity.shopping.ShoppingCheckoutStep" />
        <activity android:name="com.ehealthinformatics.app.activity.shopping.SimpleCheckout" />
        <activity android:name="com.ehealthinformatics.app.activity.shopping.SearchToolbarLight" />
        <activity android:name="com.ehealthinformatics.app.activity.shopping.SearchCustomer" />

        <activity android:name="com.ehealthinformatics.app.activity.SettingsActivity" />
        <activity
            android:name="com.ehealthinformatics.app.activity.AppIntro"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.ehealthinformatics.mail.widget.MailDetailDialog"
            android:theme="@style/Theme.AppCompat.Light.Dialog" />
        <activity
            android:name="com.ehealthinformatics.mail.widget.MailChatterCompose"
            android:theme="@style/Theme.AppCompat.Light.Dialog" />
        <activity
            android:name="com.ehealthinformatics.app.activity.OdooAccountQuickManage"
            android:theme="@style/Theme.AppCompat.Light.Dialog"
            android:windowSoftInputMode="adjustPan" />
        <activity android:name="com.ehealthinformatics.app.activity.About" />
        <activity android:name="com.ehealthinformatics.app.activity.Profile" />
        <activity android:name="com.ehealthinformatics.app.activity.shopping.PaymentType" />
        <activity android:name="com.ehealthinformatics.app.activity.shopping.PaymentLine" />
        <activity android:name="com.ehealthinformatics.app.activity.shopping.PaymentLines" />
        <activity android:name="com.ehealthinformatics.app.activity.shopping.PaymentSuccess" />

         <!--Reminder Receivers//-->
        <receiver android:name="com.ehealthinformatics.core.utils.reminder.ReminderReceiver" />
        <receiver android:name="com.ehealthinformatics.core.utils.reminder.ReminderActionReceiver" />

        <!--&lt;!&ndash; SMS Receiver &ndash;&gt;-->
        <!--<receiver-->
            <!--android:name="com.klinker.android.send_message.SentReceiver"-->
            <!--android:taskAffinity="[insert package name here].SMS_SENT"/>-->

        <!--<receiver-->
            <!--android:name="com.klinker.android.send_message.DeliveredReceiver"-->
            <!--android:taskAffinity="[insert package name here].SMS_DELIVERED"/>-->

        <receiver
            android:name="com.ehealthinformatics.sms.SmsReceiver"
            android:permission="android.permission.BROADCAST_SMS">
        <intent-filter android:priority="999" >
            <action android:name="android.provider.Telephony.SMS_RECEIVED" />
        </intent-filter>
        </receiver>

        <service android:name="com.android.mms.transaction.TransactionService"/>


        <service android:name="com.ehealthinformatics.core.auth.OdooAuthService">
            <intent-filter>
                <action android:name="android.accounts.AccountAuthenticator" />
            </intent-filter>

            <meta-data
                android:name="android.accounts.AccountAuthenticator"
                android:resource="@xml/authenticator" />
        </service>

        <provider
            android:name="com.ehealthinformatics.core.orm.provider.BaseModelProvider"
            android:authorities="${applicationId}.core.provider.content"
            android:multiprocess="true" />

        <!-- Sync Provider & Service  // -->
        <provider
            android:name="com.ehealthinformatics.device.providers.CustomersSyncProvider"
            android:authorities="${applicationId}.core.provider.content.sync.res_partner"
            android:label="@string/sync_label_customers"
            android:multiprocess="true" />

        <service
            android:name="com.ehealthinformatics.device.services.CustomerSyncService"
            android:exported="true"
            android:process=":sync_customer">
            <intent-filter>
                <action android:name="android.content.SyncAdapter" />
            </intent-filter>

            <meta-data
                android:name="android.content.SyncAdapter"
                android:resource="@xml/customer_sync_adapter" />
        </service>

        <activity
            android:name="com.ehealthinformatics.app.fragment.CustomerDetails"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name="com.ehealthinformatics.app.activity.SplashScreenActivity"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>



        <!-- Product Sync Provider & Service  // -->
        <provider
            android:name="com.ehealthinformatics.device.providers.ProductsSyncProvider"
            android:authorities="${applicationId}.core.provider.content.sync.product_product"
            android:label="@string/sync_label_products"
            android:multiprocess="true" />

        <service
            android:name="com.ehealthinformatics.device.services.ProductSyncService"
            android:exported="true"
            android:process=":sync_product">
            <intent-filter>
                <action android:name="android.content.SyncAdapter" />
            </intent-filter>

            <meta-data
                android:name="android.content.SyncAdapter"
                android:resource="@xml/product_sync_adapter" />
        </service>

        <activity
            android:name="com.ehealthinformatics.app.fragment.ProductDetails"
            android:windowSoftInputMode="adjustPan" />


        <!-- PurchaseList Sync Provider & Service  // -->
        <provider
            android:name="com.ehealthinformatics.device.providers.PurchaseSyncProvider"
            android:authorities="${applicationId}.core.provider.content.sync.purchase_order"
            android:label="@string/sync_label_purchases"
            android:multiprocess="true" />

        <service
            android:name="com.ehealthinformatics.device.services.PurchaseSyncService"
            android:exported="true"
            android:process=":sync_purchase">
            <intent-filter>
                <action android:name="android.content.SyncAdapter" />
            </intent-filter>

            <meta-data
                android:name="android.content.SyncAdapter"
                android:resource="@xml/purchase_sync_adapter" />
        </service>

        <!-- PosOrderList Sync Provider & Service  // -->
        <provider
            android:name="com.ehealthinformatics.device.providers.PosOrderSyncProvider"
            android:authorities="${applicationId}.core.provider.content.sync.pos_order"
            android:label="@string/sync_label_pos_order"
            android:multiprocess="true" />

        <service
            android:name="com.ehealthinformatics.device.services.PosOrderSyncService"
            android:exported="true"
            android:process=":sync_point_of_sale">
            <intent-filter>
                <action android:name="android.content.SyncAdapter" />
            </intent-filter>

            <meta-data
                android:name="android.content.SyncAdapter"
                android:resource="@xml/pos_sync_adapter" />
        </service>

        <!-- PosOrderLine Sync Provider & Service  // -->
        <provider
            android:name="com.ehealthinformatics.device.providers.PosOrderLineSyncProvider"
            android:authorities="${applicationId}.core.provider.content.sync.pos_order_line"
            android:label="@string/sync_label_pos_order_line"
            android:multiprocess="true" />

        <service
            android:name="com.ehealthinformatics.device.services.PosOrderLineSyncService"
            android:exported="true"
            android:process=":sync_pos_order_line">
            <intent-filter>
                <action android:name="android.content.SyncAdapter" />
            </intent-filter>

            <meta-data
                android:name="android.content.SyncAdapter"
                android:resource="@xml/pos_order_line_sync_adapter" />
        </service>

        <!-- PosConfigLine Sync Provider & Service  // -->
        <provider
            android:name="com.ehealthinformatics.device.providers.PosConfigSyncProvider"
            android:authorities="${applicationId}.core.provider.content.sync.pos_config"
            android:label="@string/sync_label_pos_config"
            android:multiprocess="true" />

        <service
            android:name="com.ehealthinformatics.device.services.PosConfigSyncService"
            android:exported="true"
            android:process=":sync_pos_config">
            <intent-filter>
                <action android:name="android.content.SyncAdapter" />
            </intent-filter>

            <meta-data
                android:name="android.content.SyncAdapter"
                android:resource="@xml/pos_config_sync_adapter" />
        </service>

    </application>

</manifest>
